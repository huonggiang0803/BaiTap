@model WebApi.Models.DTOs.MasterProductUpdateDto

<form id="editForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductCode" />
    <input type="hidden" asp-for="ProductName" />

    <div class="row">
        <!-- Cột trái -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Mã sản phẩm</label>
                <input class="form-control bg-light" value="@Model.ProductCode" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                <input class="form-control bg-light" value="@Model.ProductName" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Đơn vị tính</label>
                <input asp-for="Unit" class="form-control" required />
            </div>
        </div>

        <!-- Cột phải -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Quy cách</label>
                <input asp-for="Specification" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Số lượng/Thùng</label>
                <input asp-for="QuantityPerBox" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Trọng lượng</label>
                <input asp-for="ProductWeight" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary me-2">Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>
