@model WebApp.Models.DTOs.SaleOutUpdateDto

@{
    DateTime? orderDate = null;
    if (Model.OrderDate > 0)
    {
        orderDate = DateTime.ParseExact(Model.OrderDate.ToString("D8"), "yyyyMMdd", null);
    }
}
<div class="modal-header">
    <h5 class="modal-title">Sửa SaleOut</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">

    <form id="Edit" asp-action="Edit" asp-controller="SaleOut" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CustomerPoNo" />
        <input type="hidden" asp-for="CustomerName" />
        <input type="hidden" asp-for="ProductCode" />
        <input type="hidden" asp-for="ProductName" />
        <input type="hidden" asp-for="Unit" />
        <input type="hidden" asp-for="OrderDate" id="OrderDateHidden" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Số PO Khách hàng</label>
                <input type="text" class="form-control" value="@Model.CustomerPoNo" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ngày đặt hàng</label>
                <input type="date" class="form-control"
                       id="OrderDateInput"
                       value="@(orderDate.HasValue? orderDate.Value.ToString("yyyy-MM-dd") : "")" readonly />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Khách hàng</label>
                <input type="text" class="form-control" value="@Model.CustomerName" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Sản phẩm</label>
                <input type="text" class="form-control" value="@Model.ProductCode - @Model.ProductName" readonly />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Đơn vị tính</label>
                <input type="text" class="form-control" value="@Model.Unit" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Đơn giá</label>
                <input asp-for="Price" class="form-control" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Số lượng</label>
                <input asp-for="Quantity" class="form-control" step="0.01" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Số lượng/Thùng</label>
                <input asp-for="QuantityPerBox" class="form-control" step="0.01" />
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-success">Lưu</button>
        </div>
    </form>
</div>
    @section Scripts {
        <script>
            $("#Edit").submit(function (e) {
                // Trước khi submit, chuyển date sang int yyyyMMdd
                var dateVal = $("#OrderDateInput").val(); 
                if (dateVal) {
                    var intVal = dateVal.replaceAll("-", ""); // 20250816
                    $("#OrderDateHidden").val(intVal);
                }
            });
        </script>
    }
